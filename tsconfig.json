{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "importHelpers": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": false
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
}